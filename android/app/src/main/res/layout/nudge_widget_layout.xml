<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/widget_container"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="12dp"
    android:background="@drawable/widget_background"
    android:clipToPadding="false">

    <!-- Header row: title + add button -->
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="8dp">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:orientation="horizontal"
            android:gravity="center_vertical">

            <ImageView
                android:id="@+id/widget_logo"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:src="@drawable/ic_notification"
                android:contentDescription="Nudge" />

            <TextView
                android:id="@+id/widget_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Today"
                android:textSize="16sp"
                android:textStyle="bold"
                android:textColor="#FF212121"
                android:layout_marginStart="8dp" />

            <TextView
                android:id="@+id/widget_count"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=""
                android:textSize="12sp"
                android:textColor="#FF757575"
                android:layout_marginStart="6dp" />

        </LinearLayout>

        <ImageView
            android:id="@+id/widget_add_button"
            android:layout_width="28dp"
            android:layout_height="28dp"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:src="@drawable/ic_widget_add"
            android:contentDescription="Add reminder"
            android:padding="2dp" />

    </RelativeLayout>

    <!-- Divider -->
    <View
        android:id="@+id/widget_divider"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#1A000000" />

    <!-- Items list -->
    <ListView
        android:id="@+id/widget_list"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:divider="@null"
        android:dividerHeight="0dp"
        android:scrollbars="none"
        android:paddingTop="4dp"
        android:clipToPadding="false" />

    <!-- Empty state -->
    <LinearLayout
        android:id="@+id/widget_empty"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="vertical"
        android:gravity="center"
        android:visibility="gone">

        <TextView
            android:id="@+id/widget_empty_emoji"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="☀️"
            android:textSize="28sp" />

        <TextView
            android:id="@+id/widget_empty_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="All clear for today!"
            android:textSize="13sp"
            android:textColor="#FF757575"
            android:layout_marginTop="4dp" />

    </LinearLayout>

</LinearLayout>
